<div class="transformation">
<% if current_user == @transformation.user || current_user.admin %>

<h1>Transformation Details</h1>

<p>
  <strong>Name:</strong>
  <%= @transformation.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @transformation.description %>
</p>

<p>
  <strong>Input name:</strong>
  <%= @transformation.input.input_name %>
</p>

<p>
  <strong>Input type:</strong>
  <%= @transformation.input.input_type %>
</p>


<p>
  <strong>Output name:</strong>
  <% @transformation.outputs.each do |output| %>
  <%= output.output_name %> |
  <% end %>
</p>

<p>
  <strong>Output type:</strong>
  <% @transformation.outputs.each do |output| %>
  <%= output.output_type %> |
  <% end %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @transformation.created_at %>
</p>

<p>
  <strong>Complete:</strong>
  <%= @transformation.complete %>
</p>

<p>
  <strong>User:</strong>
  <%= @transformation.user.email %>
</p>

<% if current_user.admin %>
<%= link_to 'Edit', edit_transformation_path(@transformation), class: "btn btn-primary btn-md" %> |
<% end %>

<% else %>

<h1>You are not able to access this page.</h1>

<% end %>

<%= link_to 'Back', transformations_path, class: "btn btn-default btn-md" %>

</div>